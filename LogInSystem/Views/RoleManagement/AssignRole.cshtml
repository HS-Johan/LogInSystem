@{
	ViewData["Title"] = "AssignRole";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AssignRole</h1>

@if (TempData["SuccessMessage"] != null)
{
	<div class="alart alart-success">
		@TempData["SuccessMessage"]
	</div>
}

<form asp-action="AssignRole" method="post">

	<div class="form-group">
		<label for="userId"> Select User </label>
		<select name="userId" id="userId" class="form-control">
			<option value=""> -- Select User -- </option>

			@foreach (var user in ViewBag.User)
			{
				<option value="@user.Id"> @user.UserName </option>
			}

		</select>
	</div>

	<div class="form-group">
		<label for="roleName"> Role Name </label>
		<select name="roleName" id="roleName" class="form-control">
			<option value=""> -- Select Role -- </option>

			@foreach (var role in ViewBag.Role)
			{
				<option value="@role.Name"> @role.Name </option>
			}

		</select>
	</div>

	<br />

	<button type="submit" class="btn btn-danger">Create Role</button>

</form>
