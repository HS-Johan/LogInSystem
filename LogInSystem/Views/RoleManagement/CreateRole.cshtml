
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateRole</h1>

@if ( TempData["SuccessMessage"] != null )
{
    <div class="alart alart-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="CreateRole" method="post">
    <div class="form-group">
        <label for="roleName">Role Name</label>
        <input type="text" name="roleName" class="form-control" id="roleName" required />
    </div>
    <br />
    <button type="submit" class="btn btn-danger">Create Role</button>
</form>

